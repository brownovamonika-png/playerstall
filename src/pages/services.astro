---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Sports Lockers - Five Tiers | Semi Pro, Varsity, Pro, Curve, Stadium | PlayerStall" description="Five tiers of custom wood sports lockers: Semi Pro ($349), Varsity ($449), Pro ($549), Curve ($649), and Stadium ($599). All with lifetime guarantee and made in Canada.">
	<!-- Hero Section -->
	<section class="hero-section">
		<div class="hero-parallax-img-holder">
			<div class="hero-parallax-img-wrapper">
				<img src="https://topscorer.qodeinteractive.com/wp-content/uploads/2020/02/our-team-title-photo.jpg" alt="Our Products" class="hero-parallax-img" />
			</div>
		</div>
		<div class="hero-content qodef-content-grid">
			<div class="breadcrumbs">
				<a href="/">Home</a>
				<span class="breadcrumbs-separator"></span>
				<span class="breadcrumbs-current">Our Products</span>
			</div>
			<h1 class="hero-title">Our Products</h1>
		</div>
	</section>

	<!-- Products Grid Section -->
	<section class="products-team-section">
		<!-- Background Elements -->
		<div class="products-background-dots"></div>
		<div class="products-background-text-holder">
			<span class="products-background-text">p r o d u c t</span>
		</div>
		
		<div class="products-container qodef-content-grid">
			<div class="section-header">
				<p class="section-subtitle">the club history</p>
				<h2 class="section-title">five tiers of excellence</h2>
			</div>
			
			<div class="products-grid">
				<!-- Semi Pro -->
				<div class="product-card" id="semi-pro">
					<div class="product-image">
						<img src="http://customsportslockers.com/wp-content/uploads/2016/03/Athletic-Locker-Semipro.jpg" alt="Semi Pro Locker" loading="lazy" />
					</div>
					<div class="product-details">
						<div class="product-position">Best Value</div>
						<h4 class="product-name">Semi Pro <span class="product-price-inline">$349</span></h4>
					</div>
				</div>

				<!-- Varsity -->
				<div class="product-card" id="varsity">
					<div class="product-image">
						<img src="http://customsportslockers.com/wp-content/uploads/2016/03/Athletic-Locker-Varsity.jpg" alt="Varsity Locker" loading="lazy" />
					</div>
					<div class="product-details">
						<div class="product-position">Most Popular</div>
						<h4 class="product-name">Varsity <span class="product-price-inline">$449</span></h4>
					</div>
				</div>

				<!-- Pro -->
				<div class="product-card" id="pro">
					<div class="product-image">
						<img src="http://customsportslockers.com/wp-content/uploads/2016/03/Athletic-Locker-Pro.jpg" alt="Pro Locker" loading="lazy" />
					</div>
					<div class="product-details">
						<div class="product-position">Professional</div>
						<h4 class="product-name">Pro <span class="product-price-inline">$549</span></h4>
					</div>
				</div>

				<!-- Stadium -->
				<div class="product-card" id="stadium">
					<div class="product-image">
						<img src="http://customsportslockers.com/wp-content/uploads/2016/03/Athletic-Lockers-Stadium.jpg" alt="Stadium Locker" loading="lazy" />
					</div>
					<div class="product-details">
						<div class="product-position">Elite</div>
						<h4 class="product-name">Stadium <span class="product-price-inline">$599</span></h4>
					</div>
				</div>

				<!-- Stick Rack -->
				<div class="product-card" id="stick-rack">
					<div class="product-image">
						<img src="/stick-rack.png" alt="Hockey Stick Rack" loading="lazy" />
					</div>
					<div class="product-details">
						<div class="product-position">Accessory</div>
						<h4 class="product-name">Stick Rack <span class="product-price-inline">$299</span></h4>
					</div>
				</div>

				<!-- Corner Unit -->
				<div class="product-card" id="corner-unit">
					<div class="product-image">
						<img src="/corner-unit.png" alt="Corner Unit" loading="lazy" />
					</div>
					<div class="product-details">
						<div class="product-position">Accessory</div>
						<h4 class="product-name">Corner Unit <span class="product-price-inline">$499</span></h4>
					</div>
				</div>

				<!-- Accessories -->
				<div class="product-card">
					<div class="product-image">
						<img src="https://topscorer.qodeinteractive.com/wp-content/uploads/2020/01/player-img-12.jpg" alt="Accessories" loading="lazy" />
					</div>
					<div class="product-details">
						<div class="product-position">Accessories</div>
						<h4 class="product-name">Locker Accessories</h4>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Comparison Table -->
	<section class="comparison-table-section" id="comparison">
		<div class="container">
			<h2>Compare All Tiers</h2>
			<div class="comparison-table-wrapper">
				<table class="comparison-table">
					<thead>
						<tr>
							<th>Feature</th>
							<th>Semi Pro</th>
							<th>Varsity</th>
							<th>Pro</th>
							<th>Curve</th>
							<th>Stadium</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>Price (Sale)</td>
							<td>$349</td>
							<td>$449</td>
							<td>$549</td>
							<td>$649</td>
							<td>$599</td>
						</tr>
						<tr>
							<td>Regular Price</td>
							<td>$449</td>
							<td>$599</td>
							<td>$749</td>
							<td>$849</td>
							<td>$799</td>
						</tr>
						<tr>
							<td>3/4" Birch Wood</td>
							<td><span class="checkmark">Yes</span></td>
							<td><span class="checkmark">Yes</span></td>
							<td><span class="checkmark">Yes</span></td>
							<td><span class="checkmark">Yes</span></td>
							<td><span class="checkmark">Yes</span></td>
						</tr>
						<tr>
							<td>Lifetime Guarantee</td>
							<td><span class="checkmark">Yes</span></td>
							<td><span class="checkmark">Yes</span></td>
							<td><span class="checkmark">Yes</span></td>
							<td><span class="checkmark">Yes</span></td>
							<td><span class="checkmark">Yes</span></td>
						</tr>
						<tr>
							<td>Modular Design</td>
							<td><span class="checkmark">Yes</span></td>
							<td><span class="checkmark">Yes</span></td>
							<td><span class="checkmark">Yes</span></td>
							<td><span class="checkmark">Yes</span></td>
							<td><span class="checkmark">Yes</span></td>
						</tr>
						<tr>
							<td>Custom Branding</td>
							<td>Basic</td>
							<td>Premium</td>
							<td>Maximum</td>
							<td>Premium</td>
							<td>Ultimate</td>
						</tr>
						<tr>
							<td>Storage Capacity</td>
							<td>Standard</td>
							<td>Enhanced</td>
							<td>Maximum</td>
							<td>Enhanced</td>
							<td>Elite</td>
						</tr>
						<tr>
							<td>Finishing Quality</td>
							<td>Professional</td>
							<td>Premium</td>
							<td>Elite</td>
							<td>Premium</td>
							<td>Championship</td>
						</tr>
						<tr>
							<td>Design Style</td>
							<td>Standard</td>
							<td>Standard</td>
							<td>Standard</td>
							<td>Curved</td>
							<td>Standard</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="cta-section">
		<div class="container">
			<div class="cta-content">
				<h2>Not Sure Which Tier is Right for You?</h2>
				<p>Get a free custom design consultation. Our team will help you choose the perfect locker solution for your program and budget.</p>
				<a href="/contact" class="btn btn-primary btn-large">Get Free Consultation</a>
			</div>
		</div>
	</section>
</BaseLayout>

<style>
	:global(body) {
		font-family: 'Yantramanav', 'Roboto', Arial, sans-serif;
		background: #ffffff;
		color: #0d0d0d;
	}

	.container {
		max-width: 1300px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.qodef-content-grid {
		max-width: 1300px;
		margin: 0 auto;
		padding: 0 20px;
	}

	/* Hero Section - Matching Our Team Page */
	.hero-section {
		position: relative;
		min-height: 400px;
		overflow: hidden;
	}

	.hero-parallax-img-holder {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 1;
	}

	.hero-parallax-img-wrapper {
		position: relative;
		width: 100%;
		height: 100%;
		overflow: hidden;
	}

	.hero-parallax-img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.hero-content {
		position: relative;
		z-index: 10;
		padding: 200px 0 100px;
	}

	.breadcrumbs {
		margin-bottom: 20px;
		font-family: 'Yantramanav', sans-serif;
		font-size: 13px;
		color: #ffffff;
	}

	.breadcrumbs a {
		color: #ffffff;
		text-decoration: none;
	}

	.breadcrumbs-separator {
		margin: 0 10px;
	}

	.breadcrumbs-current {
		color: #ffffff;
	}

	.hero-title {
		font-family: 'Oswald', sans-serif;
		font-size: 72px;
		font-weight: 600;
		color: #ffffff;
		text-transform: uppercase;
		margin: 0;
		line-height: 1.2;
	}

	/* Products Team Section - Matching Our Team Page */
	.products-team-section {
		position: relative;
		background: #ffffff;
		padding: 120px 0;
		overflow: hidden;
		min-height: 800px;
	}

	.products-background-dots {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: radial-gradient(circle, rgba(0,0,0,0.05) 1px, transparent 1px);
		background-size: 20px 20px;
		z-index: 1;
	}

	.products-background-text-holder {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		z-index: 2;
		pointer-events: none;
		width: 100%;
		text-align: center;
	}

	.products-background-text {
		font-family: 'Oswald', sans-serif;
		font-size: 350px;
		font-weight: 700;
		color: #fdfdfd;
		text-transform: uppercase;
		letter-spacing: 0.2em;
		white-space: nowrap;
		display: inline-block;
	}

	.products-container {
		position: relative;
		z-index: 10;
	}

	.section-header {
		text-align: center;
		margin-bottom: 65px;
		position: relative;
	}

	.section-subtitle {
		font-family: 'Yantramanav', sans-serif;
		font-size: 13px;
		color: #8c8c8c;
		letter-spacing: 0.3em;
		text-transform: uppercase;
		margin-bottom: -3px;
		display: block;
	}

	.section-title {
		font-family: 'Oswald', sans-serif;
		font-size: 48px;
		font-weight: 600;
		color: #000000;
		text-transform: uppercase;
		margin: 15px 0;
		letter-spacing: 1px;
		position: relative;
		display: inline-block;
	}

	/* Products Grid - Matching Our Team Page */
	.products-grid {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 30px;
	}

	.product-card {
		background: transparent;
		overflow: hidden;
		transition: transform 0.3s ease;
		cursor: pointer;
	}

	.product-card:hover {
		transform: translateY(-5px);
	}

	.product-image {
		width: 100%;
		height: 400px;
		overflow: hidden;
		margin-bottom: 20px;
	}

	.product-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
		filter: grayscale(100%);
		transition: filter 0.3s ease;
		transform: translateX(-15%);
	}

	#semi-pro .product-image img,
	#stadium .product-image img {
		transform: translateX(-15%) scale(1.1);
		transform-origin: center;
	}

	#stick-rack .product-image {
		display: flex;
		justify-content: flex-start;
		align-items: flex-end;
		padding-left: -20px;
	}

	#stick-rack .product-image img {
		transform: translateX(calc(-15% - 15px)) scale(0.71875) translateY(-10px);
		transform-origin: left bottom;
	}

	.product-card:hover .product-image img {
		filter: grayscale(0%);
	}

	.product-details {
		text-align: left;
	}

	.product-position {
		font-family: 'Yantramanav', sans-serif;
		font-size: 13px;
		color: #8c8c8c;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		margin-bottom: 10px;
		display: block;
	}

	.product-name {
		font-family: 'Oswald', sans-serif;
		font-size: 24px;
		font-weight: 600;
		color: #000000;
		text-transform: uppercase;
		margin: 0;
		line-height: 1.2;
	}

	.product-price-inline {
		font-family: 'Oswald', sans-serif;
		font-size: 24px;
		font-weight: 600;
		color: #000000;
		text-transform: uppercase;
		margin-left: 10px;
	}

	/* Comparison Table Section */
	.comparison-table-section {
		padding: 100px 0;
		background: #f7f7f7;
	}

	.comparison-table-section h2 {
		font-family: 'Oswald', sans-serif;
		font-size: 48px;
		font-weight: 600;
		color: #0d0d0d;
		text-align: center;
		text-transform: uppercase;
		margin-bottom: 50px;
	}

	.comparison-table-wrapper {
		overflow-x: auto;
	}

	.comparison-table {
		width: 100%;
		border-collapse: collapse;
		background: #fff;
		font-family: 'Yantramanav', sans-serif;
	}

	.comparison-table thead {
		background: #0d0d0d;
		color: #fff;
	}

	.comparison-table th {
		padding: 1.5rem 1rem;
		text-align: left;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		font-size: 14px;
	}

	.comparison-table th:first-child {
		background: #fe5900;
	}

	.comparison-table td {
		padding: 1rem;
		border-bottom: 1px solid #e0e0e0;
		color: #333;
		font-size: 16px;
	}

	.comparison-table tbody tr:hover {
		background: #f9f9f9;
	}

	.comparison-table tbody tr:last-child td {
		border-bottom: none;
	}

	.checkmark {
		color: #fe5900;
		font-weight: 600;
	}

	/* CTA Section */
	.cta-section {
		padding: 100px 0;
		background: #0d0d0d;
		color: #fff;
		text-align: center;
	}

	.cta-content h2 {
		font-family: 'Oswald', sans-serif;
		font-size: 48px;
		font-weight: 600;
		color: #fff;
		text-transform: uppercase;
		margin-bottom: 20px;
	}

	.cta-content p {
		font-family: 'Yantramanav', sans-serif;
		font-size: 20px;
		color: #ccc;
		margin-bottom: 40px;
		max-width: 700px;
		margin-left: auto;
		margin-right: auto;
		line-height: 1.8;
	}

	.btn {
		display: inline-block;
		padding: 15px 40px;
		text-decoration: none;
		text-transform: uppercase;
		font-weight: 500;
		letter-spacing: 0.1em;
		font-size: 18px;
		transition: all 0.3s;
		font-family: 'Roboto', sans-serif;
	}

	.btn-primary {
		background: #fe5900;
		color: #ffffff;
		border: 2px solid #fe5900;
	}

	.btn-primary:hover {
		background: #e04d00;
		border-color: #e04d00;
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(254, 89, 0, 0.3);
	}

	.btn-large {
		padding: 18px 50px;
		font-size: 20px;
	}

	/* Responsive */
	@media (max-width: 1440px) {
		.products-grid {
			gap: 25px;
		}
	}

	@media (max-width: 1366px) {
		.products-grid {
			gap: 20px;
		}
	}

	@media (max-width: 1024px) {
		.hero-title {
			font-size: 56px;
		}

		.products-background-text {
			font-size: 250px;
		}

		.section-title {
			font-size: 36px;
		}

		.products-grid {
			grid-template-columns: repeat(3, 1fr);
			gap: 25px;
		}

		.comparison-table-section h2 {
			font-size: 36px;
		}

		.cta-content h2 {
			font-size: 36px;
		}
	}

	@media (max-width: 768px) {
		.hero-content {
			padding: 150px 0 80px;
		}

		.hero-title {
			font-size: 42px;
		}

		.products-background-text {
			font-size: 180px;
		}

		.products-grid {
			grid-template-columns: repeat(2, 1fr);
			gap: 20px;
		}

		.section-title {
			font-size: 32px;
		}

		.comparison-table-wrapper {
			overflow-x: scroll;
		}
	}

	@media (max-width: 680px) {
		.products-grid {
			grid-template-columns: 1fr;
			gap: 30px;
		}

		.products-background-text {
			font-size: 120px;
		}

		.comparison-table th,
		.comparison-table td {
			padding: 0.75rem 0.5rem;
			font-size: 14px;
		}
	}

	@media (max-width: 480px) {
		.hero-title {
			font-size: 36px;
		}

		.section-title {
			font-size: 28px;
		}

		.comparison-table-section h2 {
			font-size: 28px;
		}

		.cta-content h2 {
			font-size: 28px;
		}
	}
</style>
