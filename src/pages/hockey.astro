	<!-- Gallery Section -->
	<section class="sport-gallery-section">
		<div class="container">
			<div class="sport-gallery-grid">
				<!-- Top Left - Text Overlay Card -->
				<div class="gallery-item gallery-text-card">
					<div class="gallery-text-content">
						<div class="gallery-category">BY SPORT</div>
						<h3 class="gallery-title">FOOTBALL LOCKERS</h3>
						<p class="gallery-description">Spacious and ventilated for helmets, pads, and cleats. Designed specifically to accommodate bulky equipment while keeping everything organized and dry.</p>
						<a href="#football" class="gallery-read-more">READ MORE</a>
					</div>
				</div>
				<!-- Top Middle - Image Card -->
				<div class="gallery-item gallery-image-card">
					<img src="https://images.unsplash.com/photo-1519869325934-2813331509ce?w=1200&q=80" alt="Basketball" />
				</div>
				<!-- Top Right - Text Overlay with Background Image -->
				<div class="gallery-item gallery-text-image-card">
					<div class="gallery-text-content">
						<div class="gallery-category">BY SPORT</div>
						<h3 class="gallery-title">HOCKEY LOCKERS</h3>
						<p class="gallery-description">Reinforced construction for heavy gear and equipment. Built to handle skates, pads, sticks, and all hockey gear with specialized storage solutions.</p>
						<a href="#hockey" class="gallery-read-more">READ MORE</a>
					</div>
					<div class="gallery-background-image">
						<img src="https://images.unsplash.com/photo-1551698618-1dfe5d97d256?w=1200&q=80" alt="Football" />
					</div>
				</div>
				<!-- Bottom Left - Image Card -->
				<div class="gallery-item gallery-image-card">
					<img src="https://images.unsplash.com/photo-1551698618-1dfe5d97d256?w=1200&q=80" alt="Football Player" />
				</div>
				<!-- Bottom Middle - Text Overlay Card -->
				<div class="gallery-item gallery-text-card">
					<div class="gallery-text-content">
						<div class="gallery-category">BY SPORT</div>
						<h3 class="gallery-title">BASKETBALL LOCKERS</h3>
						<p class="gallery-description">Sleek design for shoes, uniforms, and personal items. Professional appearance that maintains a clean, modern look for top basketball programs.</p>
						<a href="#basketball" class="gallery-read-more">READ MORE</a>
					</div>
				</div>
				<!-- Bottom Right - Image Card -->
				<div class="gallery-item gallery-image-card">
					<img src="https://images.unsplash.com/photo-1577223625816-7546f13df25d?w=1200&q=80" alt="Hockey Action" />
				</div>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="cta-section">
		<div class="container">
			<div class="cta-content">
				<h2>Need Lockers for Multiple Sports?</h2>
				<p>We design complete locker room solutions for multi-sport facilities. Get a free custom design consultation for your entire facility.</p>
				<a href="/contact" class="btn btn-primary btn-large">Get Free Design Consultation</a>
			</div>
		</div>
	</section>

</BaseLayout>

