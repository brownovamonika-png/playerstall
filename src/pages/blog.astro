---

<BaseLayout title="Blog - Sports Locker Insights & Tips | PlayerStall" description="Expert insights on sports lockers, locker room design, and athletic facility management. Tips from 30+ years of experience.">
	<!-- Hero Section -->
	<section class="hero" id="hero">
		<div class="playoff-text">BLOG</div>
		<div class="hero-content">
			<p class="hero-subtitle">PlayerStall Insights</p>
			<h1 class="hero-title">Stories & Playbooks</h1>
			<p class="hero-text">Expert insights on sports lockers, locker room design, and athletic facility management. Tips from 30+ years of experience.</p>
			<div class="hero-buttons">
				<a href="/contact" class="btn btn-primary">Get Free Consultation</a>
				<a href="#blog-posts" class="btn btn-outline">View Articles</a>
			</div>
		</div>
		<div class="hero-image">
			<img src="https://topscorer.qodeinteractive.com/wp-content/uploads/2020/03/h3-rev-img-2.png" alt="PlayerStall Blog" />
		</div>
	</section>

	<!-- Breadcrumb Section -->
	<section class="breadcrumb-section">
		<div class="container">
			<div class="breadcrumb">
				<a href="/">Home</a> Blog
			</div>
		</div>
	</section>

	<!-- Masonry Blog Section -->
	<section class="masonry-blog-section" id="blog-posts">
		<div class="container">
			<div class="masonry-blog-grid">
				{posts.map((post) => (
					<article class="masonry-blog-article" style={`grid-row-end: span ${post.rowSpan};`}>
						<a href={post.url ?? '#'} style="display: block; text-decoration: none; color: inherit;">
							<div class="masonry-blog-image" style={`height: ${post.imageHeight}px;`}>
								<img src={post.heroImage} alt={post.title} loading="lazy" />
							</div>
							<div class="masonry-blog-content">
								<div class="masonry-blog-meta">
									<a href={`/blog?category=${post.category.toLowerCase()}`} class="masonry-blog-category">{post.category}</a>
									<span class="masonry-blog-date">{post.date}</span>
								</div>
								<h4 class="masonry-blog-title">
									<a href={post.url ?? '#'}>{post.title}</a>
								</h4>
								<p class="masonry-blog-excerpt">{post.summary}</p>
								<a href={post.url ?? '#'} class="masonry-blog-read-more">Read More</a>
							</div>
						</a>
					</article>
				))}
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="cta-section">
		<div class="container">
			<div class="cta-content">
				<h2>Have Questions About Your Locker Room Project?</h2>
				<p>Get expert advice from 30+ years of experience. Free custom design consultation.</p>
				<a href="/contact" class="btn btn-primary btn-large">Get Free Consultation</a>
			</div>
		</div>
	</section>
</BaseLayout>

<style>
	:global(body) {
		font-family: 'Yantramanav', 'Roboto', Arial, sans-serif;
		background: #f7f7f7;
		color: #0d0d0d;
	}

	section {
		max-width: 1300px;
		margin: 0 auto;
		padding: 4rem 20px;
	}

	/* Hero Section */
	.hero {
		position: relative;
		height: 800px;
		background: #f7f7f7;
		overflow: hidden;
		display: flex;
		align-items: center;
		justify-content: flex-start;
		padding-left: 10%;
		margin-top: 0;
	}

	.playoff-text {
		position: absolute;
		font-family: 'Oswald', sans-serif;
		font-size: 350px;
		font-weight: 700;
		color: rgba(13, 13, 13, 0.03);
		text-transform: uppercase;
		letter-spacing: -3px;
		z-index: 1;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		white-space: nowrap;
	}

	.hero-content {
		position: relative;
		z-index: 10;
		max-width: 600px;
	}

	.hero-subtitle {
		font-family: 'Yantramanav', sans-serif;
		font-size: 13px;
		color: #8c8c8c;
		letter-spacing: 0.3em;
		text-transform: uppercase;
		margin-bottom: 20px;
	}

	.hero-title {
		font-family: 'Oswald', sans-serif;
		font-size: 80px;
		font-weight: 600;
		color: #0d0d0d;
		text-transform: uppercase;
		line-height: 80px;
		margin-bottom: 30px;
	}

	.hero-text {
		font-family: 'Yantramanav', sans-serif;
		font-size: 20px;
		color: #666666;
		line-height: 30px;
		margin-bottom: 40px;
	}

	.hero-buttons {
		display: flex;
		gap: 20px;
	}

	.btn {
		display: inline-block;
		padding: 15px 40px;
		text-decoration: none;
		text-transform: uppercase;
		font-weight: 500;
		letter-spacing: 0.1em;
		font-size: 20px;
		transition: all 0.3s;
		font-family: 'Roboto', sans-serif;
	}

	.btn-primary {
		background: #fe5900;
		color: #ffffff;
		border: 2px solid #fe5900;
	}

	.btn-primary:hover {
		background: #e04d00;
		border-color: #e04d00;
	}

	.btn-outline {
		background: transparent;
		color: #0d0d0d;
		border: 2px solid #bfbfbf;
	}

	.btn-outline:hover {
		border-color: #0d0d0d;
		color: #0d0d0d;
	}

	.hero-image {
		position: absolute;
		right: 0;
		top: 50%;
		transform: translateY(-50%);
		z-index: 5;
	}

	.hero-image img {
		max-width: 810px;
		height: auto;
	}

	.container {
		max-width: 1300px;
		margin: 0 auto;
		padding: 0 20px;
	}

	/* Breadcrumb Section */
	.breadcrumb-section {
		background: #ffffff;
		padding: 60px 0 40px;
		border-bottom: 1px solid #e0e0e0;
	}

	.breadcrumb {
		font-family: 'Yantramanav', sans-serif;
		font-size: 13px;
		text-transform: uppercase;
		letter-spacing: 0.3em;
		color: #8c8c8c;
	}

	.breadcrumb a {
		color: #8c8c8c;
		text-decoration: none;
		transition: color 0.3s;
	}

	.breadcrumb a:hover {
		color: #fe5900;
	}

	/* Masonry Blog Section */
	.masonry-blog-section {
		background: #ffffff;
		padding: 80px 0;
	}

	.masonry-blog-grid {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 25px;
		grid-auto-rows: 10px;
	}

	.masonry-blog-article {
		background: #ffffff;
		overflow: hidden;
	}

	.masonry-blog-image {
		width: 100%;
		overflow: hidden;
		margin-bottom: 20px;
	}

	.masonry-blog-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.5s;
	}

	.masonry-blog-article:hover .masonry-blog-image img {
		transform: scale(1.05);
	}

	.masonry-blog-content {
		padding: 0 0 20px;
	}

	.masonry-blog-meta {
		display: flex;
		gap: 15px;
		margin-bottom: 15px;
		font-family: 'Yantramanav', sans-serif;
		font-size: 12px;
		text-transform: uppercase;
		letter-spacing: 0.1em;
	}

	.masonry-blog-category {
		color: #8c8c8c;
		text-decoration: none;
		transition: color 0.3s;
	}

	.masonry-blog-category:hover {
		color: #fe5900;
	}

	.masonry-blog-date {
		color: #8c8c8c;
	}

	.masonry-blog-title {
		font-family: 'Oswald', sans-serif;
		font-size: 20px;
		font-weight: 600;
		color: #0d0d0d;
		margin-bottom: 15px;
		line-height: 1.3;
	}

	.masonry-blog-title a {
		color: #0d0d0d;
		text-decoration: none;
		transition: color 0.3s;
	}

	.masonry-blog-article:hover .masonry-blog-title a {
		color: #fe5900;
	}

	.masonry-blog-excerpt {
		font-family: 'Yantramanav', sans-serif;
		font-size: 14px;
		color: #666666;
		line-height: 1.6;
		margin-bottom: 15px;
	}

	.masonry-blog-read-more {
		font-family: 'Yantramanav', sans-serif;
		font-size: 13px;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		color: #0d0d0d;
		text-decoration: none;
		display: inline-block;
		transition: color 0.3s;
		font-weight: 500;
	}

	.masonry-blog-article:hover .masonry-blog-read-more {
		color: #fe5900;
	}

	/* CTA Section */
	.cta-section {
		padding: 5rem 0;
		background: #0d0d0d;
		color: #fff;
		text-align: center;
	}

	.cta-content h2 {
		font-family: 'Oswald', sans-serif;
		font-size: 48px;
		font-weight: 600;
		color: #fff;
		text-transform: uppercase;
		margin-bottom: 1.5rem;
	}

	.cta-content p {
		font-family: 'Yantramanav', sans-serif;
		font-size: 20px;
		color: #ccc;
		margin-bottom: 2rem;
		max-width: 700px;
		margin-left: auto;
		margin-right: auto;
		line-height: 1.8;
	}

	.btn-large {
		padding: 18px 50px;
		font-size: 18px;
	}

	@media (max-width: 1200px) {
		.masonry-blog-grid {
			grid-template-columns: repeat(3, 1fr);
		}
	}

	@media (max-width: 1024px) {
		.hero-title {
			font-size: 48px;
			line-height: 1.2;
		}

		.hero-image {
			display: none;
		}

		.playoff-text {
			font-size: 150px;
		}
	}

	@media (max-width: 768px) {
		section {
			padding: 3rem 1.5rem;
		}

		.hero {
			height: 600px;
			padding-left: 20px;
		}

		.hero-title {
			font-size: 36px;
			line-height: 1.2;
		}

		.hero-text {
			font-size: 16px;
		}

		.hero-buttons {
			flex-direction: column;
		}

		.playoff-text {
			font-size: 100px;
		}

		.masonry-blog-grid {
			grid-template-columns: repeat(2, 1fr);
		}

		.cta-content h2 {
			font-size: 36px;
		}
	}

	@media (max-width: 480px) {
		.masonry-blog-grid {
			grid-template-columns: 1fr;
		}
	}
</style>

