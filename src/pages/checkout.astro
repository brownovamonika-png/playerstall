<script>
	document.addEventListener('DOMContentLoaded', function() {
		// Load cart from localStorage
		function getCart() {
			const cart = localStorage.getItem('playerstall_cart');
			return cart ? JSON.parse(cart) : [];
		}

		function renderCheckoutItems() {
			const cart = getCart();
			const itemsBody = document.getElementById('checkout-items-body');
			const subtotalEl = document.getElementById('checkout-subtotal');
			const totalAmount = document.getElementById('order-total-amount');

			if (!itemsBody) return;

			let subtotal = 0;
			let html = '';

			if (cart.length === 0) {
				html = '<tr><td colspan="2" style="text-align: center; padding: 40px;">Your cart is empty. <a href="/shop">Return to shop</a></td></tr>';
				if (subtotalEl) subtotalEl.textContent = '0.00';
				if (totalAmount) totalAmount.textContent = '0.00';
			} else {
				cart.forEach(item => {
					const itemTotal = item.price * item.quantity;
					subtotal += itemTotal;
					html += `
						<tr class="cart_item">
							<td class="product-name">
								${item.name.toUpperCase()}&nbsp;
								<strong class="product-quantity">Ã— ${item.quantity}</strong>
							</td>
							<td class="product-total">
								<span class="woocommerce-Price-amount amount">
									<bdi><span class="woocommerce-Price-currencySymbol">$</span>${itemTotal.toFixed(2)}</bdi>
								</span>
							</td>
						</tr>
					`;
				});
			}

			itemsBody.innerHTML = html;
			if (subtotalEl) subtotalEl.textContent = subtotal.toFixed(2);
			if (totalAmount) totalAmount.textContent = subtotal.toFixed(2);

			return subtotal;
		}

		// Initialize checkout items
		let baseTotal = renderCheckoutItems();

		// Toggle shipping address fields
		const shipToDifferentAddress = document.getElementById('ship-to-different-address-checkbox');
		const shippingFields = document.getElementById('shippingFields');
		
		if (shipToDifferentAddress && shippingFields) {
			shipToDifferentAddress.addEventListener('change', function() {
				if (this.checked) {
					shippingFields.style.display = 'block';
					const shippingRequiredFields = shippingFields.querySelectorAll('[id$="_field"] input[required], [id$="_field"] select[required]');
					shippingRequiredFields.forEach(field => {
						field.setAttribute('required', 'required');
					});
				} else {
					shippingFields.style.display = 'none';
					const shippingRequiredFields = shippingFields.querySelectorAll('[id$="_field"] input, [id$="_field"] select');
					shippingRequiredFields.forEach(field => {
						field.removeAttribute('required');
					});
				}
			});
		}

		// Update total based on shipping method
		const shippingMethods = document.querySelectorAll('.woocommerce-shipping-methods input[type="radio"]');
		const totalAmount = document.getElementById('order-total-amount');
		
		if (shippingMethods.length && totalAmount) {
			shippingMethods.forEach(method => {
				method.addEventListener('change', function() {
					const cart = getCart();
					const subtotal = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
					let shippingCost = 0;
					if (this.value === 'flat_rate') {
						shippingCost = 50.00;
					} else if (this.value === 'local_pickup') {
						shippingCost = 100.00;
					}
					
					const newTotal = subtotal + shippingCost;
					if (totalAmount) totalAmount.textContent = newTotal.toFixed(2);
				});
			});
		}

		// Show/hide payment method descriptions
		const paymentMethods = document.querySelectorAll('.wc_payment_method input[type="radio"]');
		paymentMethods.forEach(method => {
			method.addEventListener('change', function() {
				// Hide all payment boxes
				document.querySelectorAll('.payment_box').forEach(box => {
					box.style.display = 'none';
				});
				// Show selected payment box
				if (this.checked) {
					const paymentBox = this.closest('.wc_payment_method').querySelector('.payment_box');
					if (paymentBox) {
						paymentBox.style.display = 'block';
					}
				}
			});
		});

		// Show initial payment box for checked method
		const checkedPayment = document.querySelector('.wc_payment_method input[type="radio"]:checked');
		if (checkedPayment) {
			const paymentBox = checkedPayment.closest('.wc_payment_method').querySelector('.payment_box');
			if (paymentBox) {
				paymentBox.style.display = 'block';
			}
		}

		// Form submission
		const checkoutForm = document.querySelector('form.checkout');
		if (checkoutForm) {
			checkoutForm.addEventListener('submit', function(e) {
				e.preventDefault();
				alert('Order placed successfully! (This is a demo - no actual order was placed)');
			});
		}
	});
</script>
