<style>
	:global(body) {
		margin: 0;
		padding: 0;
		font-family: 'Yantramanav', 'Roboto', Arial, sans-serif;
		background: #ffffff;
		color: #0d0d0d;
		line-height: 1.6;
	}

	.container {
		max-width: 1300px;
		margin: 0 auto;
		padding: 0 20px;
		position: relative;
		z-index: 10;
	}

	/* Hero Section */
	.hero-section {
		position: relative;
		min-height: 400px;
		display: flex;
		align-items: flex-end;
		overflow: hidden;
	}

	.hero-parallax-img-holder {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		z-index: 1;
	}

	.hero-parallax-img-wrapper {
		width: 100%;
		height: 100%;
	}

	.hero-parallax-img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
	}

	.hero-content {
		position: relative;
		z-index: 10;
		width: 100%;
		padding: 60px 0;
	}

	.qodef-content-grid {
		max-width: 1300px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.breadcrumbs {
		display: flex;
		align-items: center;
		gap: 8px;
		margin-bottom: 20px;
		font-family: 'Yantramanav', sans-serif;
		font-size: 12px;
		color: rgba(255, 255, 255, 0.9);
		text-transform: uppercase;
		letter-spacing: 0.1em;
	}

	.breadcrumbs a {
		color: rgba(255, 255, 255, 0.9);
		text-decoration: none;
	}

	.breadcrumbs-separator {
		width: 1px;
		height: 12px;
		background: rgba(255, 255, 255, 0.5);
	}

	.breadcrumbs-current {
		color: rgba(255, 255, 255, 0.9);
	}

	.hero-title {
		font-family: 'Oswald', sans-serif;
		font-size: 80px;
		font-weight: 600;
		color: #ffffff;
		text-transform: uppercase;
		margin: 0;
		letter-spacing: 2px;
		line-height: 1.1;
	}

	/* Section Header */
	.section-header {
		text-align: center;
		margin-bottom: 64px;
		position: relative;
		z-index: 10;
	}

	.section-subtitle {
		font-family: 'Yantramanav', sans-serif;
		font-size: 13px;
		color: #8c8c8c;
		letter-spacing: 0.3em;
		text-transform: uppercase;
		margin-bottom: -3px;
		display: block;
	}

	.section-title {
		font-family: 'Oswald', sans-serif;
		font-size: 48px;
		font-weight: 600;
		color: #000000;
		text-transform: uppercase;
		margin: 15px 0;
		letter-spacing: 1px;
		position: relative;
		display: inline-block;
	}

	.section-title::before,
	.section-title::after {
		content: '';
		position: absolute;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 1px;
		background: #000000;
	}

	.section-title::before {
		top: -15px;
	}

	.section-title::after {
		bottom: -15px;
	}

	/* Trending Section (Key Features) */
	.trending-section {
		background: #ffffff;
		padding: 100px 0;
	}

	.trending-container {
		max-width: 1300px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.trending-grid {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 25px;
	}

	.trending-item {
		position: relative;
		height: 400px;
		overflow: hidden;
		cursor: pointer;
	}

	.trending-item img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.5s ease;
	}

	.trending-item:hover img {
		transform: scale(1.1);
	}

	.trending-overlay {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		background: linear-gradient(to top, rgba(0, 0, 0, 0.95), transparent);
		padding: 2rem;
		color: #fff;
	}

	.trending-number {
		font-family: 'Oswald', sans-serif;
		font-size: 48px;
		font-weight: 700;
		color: #fe5900;
		line-height: 1;
		margin-bottom: 0.5rem;
	}

	.trending-meta {
		font-family: 'Yantramanav', sans-serif;
		font-size: 12px;
		color: #999;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		margin-bottom: 1rem;
	}

	.trending-title {
		font-family: 'Oswald', sans-serif;
		font-size: 20px;
		font-weight: 600;
		color: #fff;
		text-transform: uppercase;
		margin-bottom: 1rem;
	}

	.trending-overlay p {
		font-family: 'Yantramanav', sans-serif;
		font-size: 16px;
		color: #ccc;
		line-height: 1.6;
		margin-top: 15px;
	}

	/* Equipment Section (Our Process) */
	.equipment-section {
		background: #f7f7f7;
		padding: 100px 0;
	}

	.equipment-container {
		max-width: 1300px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.equipment-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 3rem;
		margin-bottom: 4rem;
	}

	.equipment-item {
		text-align: center;
	}

	.equipment-circle {
		width: 80px;
		height: 80px;
		border-radius: 50%;
		background: #fe5900;
		color: #fff;
		display: flex;
		align-items: center;
		justify-content: center;
		font-family: 'Oswald', sans-serif;
		font-size: 36px;
		font-weight: 700;
		margin: 0 auto 1.5rem;
	}

	.equipment-item h4 {
		font-family: 'Oswald', sans-serif;
		font-size: 24px;
		font-weight: 600;
		color: #0d0d0d;
		text-transform: uppercase;
		margin-bottom: 1rem;
	}

	.equipment-item p {
		font-family: 'Yantramanav', sans-serif;
		font-size: 16px;
		color: #666666;
		line-height: 1.8;
	}

	.equipment-accordion {
		max-width: 900px;
		margin: 0 auto;
	}

	.accordion-item {
		background: #fff;
		border-bottom: 1px solid #e0e0e0;
		margin-bottom: 1rem;
	}

	.accordion-header {
		padding: 1.5rem;
		cursor: pointer;
		display: flex;
		justify-content: space-between;
		align-items: center;
		font-family: 'Oswald', sans-serif;
		font-size: 18px;
		font-weight: 600;
		color: #0d0d0d;
		text-transform: uppercase;
		transition: color 0.3s ease;
	}

	.accordion-header:hover {
		color: #fe5900;
	}

	.accordion-item.active .accordion-header {
		color: #fe5900;
	}

	.accordion-content {
		max-height: 0;
		overflow: hidden;
		transition: max-height 0.3s ease;
	}

	.accordion-item.active .accordion-content {
		max-height: 500px;
	}

	.accordion-content p {
		padding: 0 1.5rem 1.5rem;
		font-family: 'Yantramanav', sans-serif;
		font-size: 16px;
		color: #666666;
		line-height: 1.8;
	}

	/* Responsive */
	@media (max-width: 1024px) {
		.hero-title {
			font-size: 56px;
		}

		.section-title {
			font-size: 36px;
		}

		.trending-grid {
			grid-template-columns: repeat(2, 1fr);
		}

		.equipment-grid {
			grid-template-columns: repeat(3, 1fr);
			gap: 2rem;
		}
	}

	@media (max-width: 768px) {
		.hero-section {
			min-height: 300px;
		}

		.hero-title {
			font-size: 42px;
		}

		.section-title {
			font-size: 28px;
		}

		.trending-section,
		.equipment-section {
			padding: 80px 0;
		}

		.trending-grid {
			grid-template-columns: 1fr;
		}

		.equipment-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}
	}

	@media (max-width: 480px) {
		.hero-title {
			font-size: 32px;
		}

		.section-title {
			font-size: 24px;
		}
	}
</style>

<script>
	// Accordion functionality
	function initAccordion() {
		const accordionHeaders = document.querySelectorAll('.accordion-header');

		accordionHeaders.forEach(header => {
			header.addEventListener('click', () => {
				const item = header.parentElement;
				const isActive = item.classList.contains('active');

				// Close all items
				document.querySelectorAll('.accordion-item').forEach(i => {
					i.classList.remove('active');
				});

				// Open clicked item if it wasn't active
				if (!isActive) {
					item.classList.add('active');
				}
			});
		});
	}

	// Initialize accordion when DOM is ready
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', initAccordion);
	} else {
		initAccordion();
	}
</script>
