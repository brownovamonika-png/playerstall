---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
	title="Timeline Demo | Custom Sports Lockers | PlayerStall"
	description="Vertical timeline demo page showing process steps with descriptions and images."
>
	<!-- Hero Section -->
	<section class="hero-section">
		<div class="hero-parallax-img-holder">
			<div class="hero-parallax-img-wrapper">
				<img src="https://topscorer.qodeinteractive.com/wp-content/uploads/2020/02/title-our-history.jpg" alt="Timeline Demo" class="hero-parallax-img" />
			</div>
		</div>
		<div class="hero-content qodef-content-grid">
			<div class="breadcrumbs">
				<a href="/">Home</a>
				<span class="breadcrumbs-separator"></span>
				<span class="breadcrumbs-current">Timeline Demo</span>
