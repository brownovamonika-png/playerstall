<style>
	:global(body) {
		font-family: 'Yantramanav', 'Roboto', Arial, sans-serif;
		background: #ffffff;
		color: #0d0d0d;
	}

	.container {
		max-width: 1300px;
		margin: 0 auto;
		padding: 0 20px;
	}

	/* Hero Section */
	.gallery-hero-section {
		position: relative;
		background: #f7f7f7;
		padding: 120px 0 80px;
		overflow: hidden;
	}

	.gallery-hero-background-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, rgba(13, 13, 13, 0.05) 0%, rgba(13, 13, 13, 0.02) 100%);
		opacity: 0.5;
	}

	.gallery-hero-container {
		position: relative;
		z-index: 10;
		max-width: 1300px;
		margin: 0 auto;
		padding: 0 20px;
		text-align: left;
	}

	.gallery-breadcrumbs {
		font-family: 'Yantramanav', sans-serif;
		font-size: 12px;
		color: #8c8c8c;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		margin-bottom: 30px;
	}

	.gallery-breadcrumbs a {
		color: #8c8c8c;
		text-decoration: none;
		transition: color 0.3s;
	}

	.gallery-breadcrumbs a:hover {
		color: #fe5900;
	}

	.gallery-breadcrumbs span {
		margin-left: 10px;
		color: #0d0d0d;
	}

	.gallery-page-title {
		font-family: 'Oswald', sans-serif;
		font-size: 72px;
		font-weight: 600;
		color: #0d0d0d;
		text-transform: uppercase;
		margin: 0;
		line-height: 1.1;
		position: relative;
		z-index: 10;
	}

	.gallery-background-text {
		position: absolute;
		font-family: 'Oswald', sans-serif;
		font-size: 300px;
		font-weight: 700;
		color: rgba(13, 13, 13, 0.03);
		text-transform: uppercase;
		letter-spacing: -3px;
		bottom: -50px;
		left: 50%;
		transform: translateX(-50%);
		white-space: nowrap;
		z-index: 1;
	}

	/* Players Section */
	.gallery-players-section {
		position: relative;
		background: #ffffff;
		padding: 100px 0;
		overflow: hidden;
	}

	.gallery-players-bg-text {
		position: absolute;
		font-family: 'Oswald', sans-serif;
		font-size: 300px;
		font-weight: 700;
		color: rgba(13, 13, 13, 0.03);
		text-transform: uppercase;
		letter-spacing: -3px;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		white-space: nowrap;
		z-index: 1;
	}

	.gallery-section-header {
		text-align: center;
		margin-bottom: 60px;
		position: relative;
		z-index: 10;
	}

	.gallery-section-subtitle {
		font-family: 'Yantramanav', sans-serif;
		font-size: 13px;
		color: #8c8c8c;
		letter-spacing: 0.3em;
		text-transform: uppercase;
		margin-bottom: 15px;
	}

	.gallery-section-title {
		font-family: 'Oswald', sans-serif;
		font-size: 48px;
		font-weight: 600;
		color: #0d0d0d;
		text-transform: lowercase;
		margin: 0;
	}

	.gallery-players-grid {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 25px;
		position: relative;
		z-index: 10;
	}

	.gallery-player-card {
		background: #fff;
		border: 1px solid #e0e0e0;
		overflow: hidden;
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.gallery-player-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
	}

	.gallery-player-image {
		width: 100%;
		height: 300px;
		overflow: hidden;
		background: #f0f0f0;
	}

	.gallery-player-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.5s ease;
	}

	.gallery-player-card:hover .gallery-player-image img {
		transform: scale(1.1);
	}

	.gallery-player-details {
		padding: 1.5rem;
		text-align: center;
	}

	.gallery-player-position {
		font-family: 'Yantramanav', sans-serif;
		font-size: 12px;
		color: #8c8c8c;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		margin-bottom: 0.5rem;
	}

	.gallery-player-name {
		font-family: 'Oswald', sans-serif;
		font-size: 20px;
		font-weight: 600;
		color: #0d0d0d;
		line-height: 1.3;
		margin: 0;
		text-transform: uppercase;
	}

	/* Responsive */
	@media (max-width: 1200px) {
		.gallery-players-grid {
			grid-template-columns: repeat(3, 1fr);
		}

		.gallery-background-text {
			font-size: 200px;
		}

		.gallery-players-bg-text {
			font-size: 200px;
		}
	}

	@media (max-width: 968px) {
		.gallery-players-grid {
			grid-template-columns: repeat(2, 1fr);
		}

		.gallery-page-title {
			font-size: 48px;
		}

		.gallery-section-title {
			font-size: 36px;
		}

		.gallery-background-text {
			font-size: 150px;
		}

		.gallery-players-bg-text {
			font-size: 150px;
		}
	}

	@media (max-width: 768px) {
		.gallery-players-grid {
			grid-template-columns: 1fr;
		}

		.gallery-page-title {
			font-size: 36px;
		}

		.gallery-section-title {
			font-size: 28px;
		}

		.gallery-background-text {
			font-size: 100px;
		}

		.gallery-players-bg-text {
			font-size: 100px;
		}
	}
</style>



