---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact Us - PlayerStall" description="Get in touch with PlayerStall for inquiries, quotes, and support">
	<!-- Hero Section -->
	<section class="hero" id="hero">
		<div class="hero-background">
			<img src="https://topscorer.qodeinteractive.com/wp-content/uploads/2020/02/h1-img-8.jpg" alt="Contact PlayerStall" class="hero-bg-image" />
		</div>
	</section>

	<section class="contact-section">
		<div class="container">
			<div class="contact-header">
				<h2>Get in Touch With Us</h2>
				<p>We're here to help with all your sports locker needs. Have questions? Need a quote? Want to schedule a consultation? Get in touch today.</p>
			</div>
			<div class="contact-grid">
				<div class="contact-info-wrapper">
					<div class="office-info">
						<h3>Office in Canada</h3>
						<div class="contact-item">
							<span class="contact-icon">z</span>
							<div>
								<p>Made in Canada</p>
								<p>Serving North America</p>
							</div>
						</div>
						<div class="contact-item">
							<span class="contact-icon">m</span>
							<div>
								<p><a href="tel:+18885878255">+1 (888) 58-STALL</a></p>
								<p><a href="tel:+18885878255">+1 (888) 58-STALL</a></p>
							</div>
						</div>
						<div class="contact-item">
							<span class="contact-icon">d</span>
							<div>
								<p><a href="mailto:info@customsportslockers.com">info@customsportslockers.com</a></p>
								<p><a href="mailto:info@customsportslockers.com">info@customsportslockers.com</a></p>
							</div>
						</div>
					</div>
				</div>

				<div class="contact-form-wrapper" id="contact-form">
					<h2>Send Us a Message</h2>
					<form class="contact-form" action="#" method="POST">
						<div class="form-group">
							<label for="name">Your Name</label>
							<input type="text" id="name" name="name" required />
						</div>

						<div class="form-group">
							<label for="email">Your Email</label>
							<input type="email" id="email" name="email" required />
						</div>

						<div class="form-group">
							<label for="message">Your Message</label>
							<textarea id="message" name="message" rows="6" required></textarea>
						</div>

						<button type="submit" class="btn btn-primary">Send Message</button>
					</form>
				</div>
			</div>
		</div>
	</section>
</BaseLayout>

<style>
	:global(body) {
		font-family: 'Yantramanav', 'Roboto', Arial, sans-serif;
		background: #f7f7f7;
		color: #0d0d0d;
	}

	.container {
		max-width: 1300px;
		margin: 0 auto;
		padding: 0 20px;
	}

	/* Hero Section */
	.hero {
		position: relative;
		height: 400px;
		overflow: hidden;
		margin-top: 0;
	}

	.hero-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 1;
		overflow: hidden;
	}

	.hero-bg-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		filter: grayscale(100%);
	}

	.contact-section {
		padding: 5rem 0;
		background: #ffffff;
	}

	.contact-header {
		text-align: center;
		max-width: 800px;
		margin: 0 auto 4rem;
	}

	.contact-header h2 {
		font-family: 'Oswald', sans-serif;
		font-size: 48px;
		font-weight: 600;
		color: #0d0d0d;
		text-transform: uppercase;
		margin-bottom: 1.5rem;
	}

	.contact-header p {
		font-family: 'Yantramanav', sans-serif;
		font-size: 18px;
		color: #666666;
		line-height: 1.8;
	}

	.contact-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: start;
	}

	.contact-info-wrapper {
		padding-right: 2rem;
	}

	.office-info h3 {
		font-family: 'Oswald', sans-serif;
		font-size: 24px;
		font-weight: 600;
		color: #0d0d0d;
		text-transform: uppercase;
		margin-bottom: 2rem;
	}

	.contact-item {
		display: flex;
		gap: 1.5rem;
		margin-bottom: 2rem;
		align-items: flex-start;
	}

	.contact-icon {
		font-family: 'Yantramanav', sans-serif;
		font-size: 16px;
		font-weight: 600;
		color: #fe5900;
		min-width: 24px;
		text-transform: lowercase;
	}

	.contact-item p {
		font-family: 'Yantramanav', sans-serif;
		font-size: 16px;
		color: #666666;
		line-height: 1.6;
		margin: 0 0 0.5rem 0;
	}

	.contact-item a {
		color: #666666;
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.contact-item a:hover {
		color: #fe5900;
	}

	.contact-form-wrapper {
		background: #fff;
		padding: 0;
	}

	.contact-form-wrapper h2 {
		font-family: 'Oswald', sans-serif;
		font-size: 24px;
		font-weight: 600;
		color: #0d0d0d;
		text-transform: uppercase;
		margin-bottom: 2rem;
	}

	.contact-form {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.form-group {
		display: flex;
		flex-direction: column;
	}

	.form-group label {
		margin-bottom: 0.5rem;
		color: #0d0d0d;
		font-weight: 500;
		font-family: 'Yantramanav', sans-serif;
		font-size: 14px;
		text-transform: uppercase;
		letter-spacing: 0.1em;
	}

	.form-group input,
	.form-group select,
	.form-group textarea {
		padding: 0.75rem;
		border: 1px solid #bfbfbf;
		border-radius: 0;
		font-size: 16px;
		font-family: 'Yantramanav', sans-serif;
		transition: border-color 0.3s ease;
		background: #fff;
		color: #0d0d0d;
		width: 100%;
	}

	.form-group input:focus,
	.form-group select:focus,
	.form-group textarea:focus {
		outline: none;
		border-color: #fe5900;
		box-shadow: 0 0 0 2px rgba(254, 89, 0, 0.1);
	}

	.form-group textarea {
		resize: vertical;
	}

	.btn {
		padding: 0.875rem 2rem;
		border-radius: 6px;
		text-decoration: none;
		font-weight: 600;
		transition: all 0.3s ease;
		display: inline-block;
		border: none;
		cursor: pointer;
		font-size: 1rem;
	}

	.btn-primary {
		background: #fe5900;
		color: #fff;
		border: 2px solid #fe5900;
	}

	.btn-primary:hover {
		background: #e04d00;
		border-color: #e04d00;
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(254, 89, 0, 0.3);
	}

	@media (max-width: 968px) {
		.contact-grid {
			grid-template-columns: 1fr;
			gap: 3rem;
		}

		.contact-info-wrapper {
			padding-right: 0;
		}

		.contact-header h2 {
			font-size: 36px;
		}
	}

	@media (max-width: 1024px) {
		.hero {
			height: 350px;
		}
	}

	@media (max-width: 768px) {
		.hero {
			height: 300px;
		}
	}

		.contact-form-container {
			padding: 1.5rem;
		}
	}
</style>

